{
  "name": "claude-code-notion",
  "version": "2.0.1",
  "description": "Enterprise-grade TypeScript library for Notion database management with Claude Code integration. Features retry/backoff, idempotency, dry-run mode, structured logging, and CLI.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "claude-code-notion": "./bin/claude-code-notion"
  },
  "files": [
    "dist/*.js",
    "dist/*.d.ts", 
    "dist/*.map",
    "bin/claude-code-notion",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "notion",
    "enterprise",
    "cli",
    "typescript",
    "sdk",
    "database",
    "project-management",
    "retry",
    "idempotency",
    "dry-run",
    "security",
    "audit",
    "ci-cd",
    "production",
    "api",
    "productivity"
  ],
  "author": "Sausaria",
  "license": "MIT",
  "dependencies": {
    "@notionhq/client": "^2.2.15"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Sausaria/claude-code-notion.git"
  },
  "bugs": {
    "url": "https://github.com/Sausaria/claude-code-notion/issues"
  },
  "homepage": "https://github.com/Sausaria/claude-code-notion#readme",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./errors": {
      "types": "./dist/errors.d.ts",
      "require": "./dist/errors.js"
    },
    "./circuit-breaker": {
      "types": "./dist/circuit-breaker.d.ts",
      "require": "./dist/circuit-breaker.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "require": "./dist/utils.js"
    }
  }
}